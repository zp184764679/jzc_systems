# ======================================
# JZC 企业管理系统 - 共享模块环境变量配置
# ======================================
# P3-41: 环境变量模板文件
# 使用说明: 复制此文件为 .env 并填入实际值

# ----------------------------------------
# JWT 认证配置 (所有子系统必须一致)
# ----------------------------------------
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# JWT Token 过期时间 (小时)
JWT_EXPIRATION_HOURS=8

# ----------------------------------------
# 认证数据库配置
# ----------------------------------------
AUTH_DB_USER=app
AUTH_DB_PASSWORD=your-password
AUTH_DB_HOST=localhost
AUTH_DB_NAME=cncplan

# ----------------------------------------
# Flask 运行配置
# ----------------------------------------
# 环境: development / production / testing
FLASK_ENV=development

# 调试模式: true / false
FLASK_DEBUG=false

# ----------------------------------------
# 日志配置
# ----------------------------------------
# 日志级别: DEBUG / INFO / WARNING / ERROR / CRITICAL
LOG_LEVEL=INFO

# 日志格式: standard / json
LOG_FORMAT=standard

# 日志目录
LOG_DIR=./logs

# ----------------------------------------
# 缓存配置 (Redis)
# ----------------------------------------
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TTL=3600
CACHE_PREFIX=app

# ----------------------------------------
# 审计日志备用配置 (P2-22)
# ----------------------------------------
AUDIT_BACKUP_DIR=/tmp/jzc_audit_backup
AUDIT_BACKUP_MAX_SIZE=10485760
AUDIT_BACKUP_MAX_FILES=5
