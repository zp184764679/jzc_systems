# Auto detect text files and perform LF normalization
* text=auto

# Source code - force LF
*.py text eol=lf
*.jsx text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.sql text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh text eol=lf
*.env text eol=lf
*.env.* text eol=lf

# Configuration files
*.config text eol=lf
*.conf text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
Dockerfile text eol=lf

# Windows scripts - keep CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.vbs text eol=crlf

# Binary files - no conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.xlsx binary
*.xls binary
*.doc binary
*.docx binary
