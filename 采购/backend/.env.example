# ======================================
# 采购系统 (Caigou) - 后端环境变量配置
# ======================================
# P3-41: 环境变量模板文件
# 端口: 5001 | 前端路径: /caigou/ | API: /caigou/api/

# ----------------------------------------
# Flask 运行配置
# ----------------------------------------
FLASK_ENV=development
FLASK_DEBUG=false
PORT=5001

# ----------------------------------------
# 应用密钥
# ----------------------------------------
APP_SECRET=your-app-secret-key

# ----------------------------------------
# 数据库配置
# ----------------------------------------
SQLALCHEMY_DATABASE_URI=mysql+pymysql://app:password@localhost:3306/caigou

# ----------------------------------------
# Celery 配置 (异步任务)
# ----------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_TASK_DEFAULT_QUEUE=default
CELERY_WORKER_CONCURRENCY=2
CELERY_TASK_TIME_LIMIT=180
CELERY_TASK_SOFT_TIME_LIMIT=120

# ----------------------------------------
# 企业微信配置
# ----------------------------------------
WEWORK_CORP_ID=your-corp-id
WEWORK_AGENT_ID=your-agent-id
WEWORK_SECRET=your-wework-secret
WEWORK_H5_DOMAIN=http://localhost:3000
WEWORK_ROBOT_WEBHOOK=

# ----------------------------------------
# 微信公众号配置 (可选)
# ----------------------------------------
WECHAT_APPID=
WECHAT_APPSECRET=
WECHAT_TOKEN=caigou_wechat_2025

# ----------------------------------------
# 系统集成 API 配置
# ----------------------------------------
CRM_API_BASE_URL=http://localhost:8002
SCM_API_BASE_URL=http://localhost:8005
PDM_API_BASE_URL=http://localhost:8001
BACKEND_DOMAIN=http://localhost:5001

# ----------------------------------------
# 文件上传配置
# ----------------------------------------
UPLOAD_FOLDER=uploads

# ----------------------------------------
# AI 分类配置 (可选)
# ----------------------------------------
LLM_BASE=http://localhost:11434
LLM_MODEL=qwen2.5:7b

# ----------------------------------------
# OCR 配置 (可选)
# ----------------------------------------
USE_BAIDU_OCR=false
BAIDU_OCR_APP_ID=
BAIDU_OCR_API_KEY=
BAIDU_OCR_SECRET_KEY=
USE_OLLAMA_VISION=true
LLM_VISION_MODEL=qwen3-vl:8b-instruct
